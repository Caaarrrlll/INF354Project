@page
@model GroupProject.Pages.Clients.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Client.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Client.Surname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Surname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Client.Number)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Number)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Client.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Title.ID) <!-- TODO title id is shown not title name -->
        </dd>
    </dl>
</div>

<form asp-page="./Details" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="id" value="@Model.Client.ID" />
            <input type="date" name="date" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-default" />
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].Package)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subscription)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Package.Name)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.PackageID">Show Clients with this package</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Client.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
